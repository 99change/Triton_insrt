// ---- Timer Stop ----
    // Timer stop
    mov.u64 %end_time, %clock64;
    mov.u16 %end_idx, INDEX;

    @!%is_probed_thread bra $JUMP_END_INDEX_PROBE;

    // Store data
    st.global.u16 [%idx_store_base], %start_idx;
    st.global.u16 [%idx_store_base + 2], %end_idx;
    st.global.u64 [%time_store_base], %start_time;
    st.global.u64 [%time_store_base + 8], %end_time;

    // Store address self increment
    add.u64 %idx_store_base, %idx_store_base, %idx_store_increment;
    add.u64 %time_store_base, %time_store_base, %time_store_increment;
$JUMP_END_INDEX_PROBE:
// ---- Timer Stop ----